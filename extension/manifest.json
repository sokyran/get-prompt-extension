{
  "description": "Get a prompt for selected image",
  "manifest_version": 3,
  "name": "Image Wizard",
  "version": "1.1",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["contextMenus"],
  "web_accessible_resources": [{ 
    "resources": [
      "images/*",
      "fonts/*" 
    ],
    "matches": ["<all_urls>"]
  }]
}
