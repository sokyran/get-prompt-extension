{
  "description": "Get a prompt for selected image",
  "manifest_version": 3,
  "name": "Image Wizard",
  "version": "1.0",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["contextMenus"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [{ 
    "resources": [
      "images/*",
      "fonts/*" 
    ],
    "matches": [
      "*://*/*"
    ]
  }]
}
